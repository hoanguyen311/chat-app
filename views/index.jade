html
	head
		title!= title
		link(rel="stylesheet", type="text/css", href="bootstrap/dist/css/bootstrap.min.css")
		link(rel="stylesheet", type="text/css", href="css/styles.css")
	body
		.container
			div#intro.row
				.col-md-5
					form#formLogin
						.row
							.avatar-placeholder.col-md-5
						.form-group
							input.form-control(type='text', name='nickname', placeholder="Your nickname ")
						.form-group
							input(type="hidden", name="avatar")
							input.btn.btn-default#fileupload(type="file", name="file", data-url="/upload")
						input.btn.btn-primary(type='submit', value="Begin to chat")

			div#chatRoom.row
				.col-md-10
					.panel.panel-default.chatRoom
						.panel-body
							div#messageList
							div#typing
						.panel-footer
							form#messageForm(action='hi', method='POST')
								.input-group.input-group-lg
									input.form-control(type='text', name='message')#messageInput
									span.input-group-btn
										input.btn.btn-primary(type='submit', value="Send")#messageSubmit
						
			
		script(src="/jquery/dist/jquery.min.js")
		script(src="/socket.io/socket.io.js")
		script(src="js/vendor/jquery.ui.widget.js")
		script(src="js/jquery.iframe-transport.js")
		script(src="/js/jquery.fileupload.js")
		script(src="/underscore/underscore-min.js")
		script(src="/js/templates.js")
		script(src="/js/main.js")
			